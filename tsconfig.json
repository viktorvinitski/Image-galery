{
  "compilerOptions": {
    "target": "es5",
    "types": ["node", "jest", "@testing-library/react", "@testing-library/jest-dom"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "shared/*": ["shared/*"],
    }
  },
  "include": ["src"],
}
